USDPICK_PASSWORD=your_password

# Pick.io registration helper (JSON map of coin -> address)
WALLET_ADDRESSES={"LTC":"","TRX":"","DOGE":"","SOL":"","BNB":"","BCH":"","TON":"","MATIC":"","DASH":"","ETH":"","USDT":""}

# Proxy / network (optional)
# PROXY_PROVIDER options: 2captcha, webshare, zyte (default: 2captcha)
PROXY_PROVIDER=2captcha
# Enable automatic proxy fetching from 2Captcha residential proxy service
# When enabled:
#   - Automatically fetches proxy config from 2Captcha API if proxies.txt is empty
#   - Generates session-rotated proxies for better anonymity
#   - Assigns sticky proxies to accounts (1 account = 1 proxy session)
#   - Monitors health with cooldown (5min) and burn (12h) windows
# Purchase proxies at: https://2captcha.com/proxy/residential-proxies
USE_2CAPTCHA_PROXIES=false
PROXY_FILE_PATH=config/proxies.txt
# Proxy validation tuning
PROXY_VALIDATION_URL=https://www.google.com
PROXY_VALIDATION_TIMEOUT_SECONDS=15
# Zyte proxy mode (no file write; credentials stay in memory)
ZYTE_API_KEY=
ZYTE_PROXY_HOST=api.zyte.com
ZYTE_PROXY_PORT=8011
ZYTE_PROXY_PROTOCOL=http
ZYTE_POOL_SIZE=20

# Electrum wallet (optional)
ELECTRUM_RPC_URL=http://127.0.0.1:7777
ELECTRUM_RPC_USER=
ELECTRUM_RPC_PASS=

# Encryption key for persisted cookies (generate a strong random value)
CRYPTOBOT_COOKIE_KEY=change_me

# Canary rollout (optional)
# Set CANARY_ONLY=true and CANARY_PROFILE to a faucet name or username substring
CANARY_PROFILE=
CANARY_ONLY=false

# Azure Monitor Application Insights (optional)
# Connection string from Azure Portal > Application Insights > Properties
# Format: InstrumentationKey=xxx;IngestionEndpoint=https://xxx.in.applicationinsights.azure.com/
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Health Monitoring & Alerting (optional)
# Webhook URL for notifications (Slack, Discord, Teams, etc.)
# Example Slack webhook: https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_WEBHOOK_URL=

# Email notifications (optional - requires SMTP configuration)
ALERT_EMAIL=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
