POLYGONPICK_USERNAME=your_email@example.com
POLYGONPICK_PASSWORD=your_password
BINPICK_USERNAME=your_email@example.com
BINPICK_PASSWORD=your_password
DASHPICK_USERNAME=your_email@example.com
DASHPICK_PASSWORD=your_password
