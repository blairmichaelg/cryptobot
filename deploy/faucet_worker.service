[Unit]
Description=Faucet Worker Automation Service
After=network.target

[Service]
Type=simple
User=azureuser
WorkingDirectory=/home/azureuser/cryptobot
EnvironmentFile=/home/azureuser/cryptobot/.env
ExecStart=/usr/bin/python3 main.py
Restart=always
RestartSec=10
StandardOutput=append:/home/azureuser/cryptobot/logs/production_run.log
StandardError=append:/home/azureuser/cryptobot/logs/production_run.log

[Install]
WantedBy=multi-user.target
